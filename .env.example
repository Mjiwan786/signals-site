# Copy this file to `.env` and fill in the values below before running the
# application.  The web and API services both read from the same environment file
# when run via docker compose.

# Redis connection URL.  Include username/password and the database index.
# Example: rediss://user:password@hostname:port/0
REDIS_HOST=your-redis-host.redis-cloud.com
REDIS_PORT=19818
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Name of the Redis stream to read trading signals from.  Defaults to
# ``signals:paper`` if unset.
SIGNALS_STREAM=signals:paper

# NextAuth configuration for your frontâ€‘end.  NEXTAUTH_URL should be the base
# URL of your Next.js site.  NEXTAUTH_SECRET must be a long random string.
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Discord OAuth2 credentials.  These are obtained from the Discord Developer
# Portal after creating an application and configuring redirect URLs.  See
# README.md for details.
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Optional: provide these if you want to restrict dashboard access to members
# of a specific Discord server or automatically assign roles on login.
DISCORD_GUILD_ID=
DISCORD_BOT_TOKEN=

# Base URL for the API used by the dashboard.  When running locally, this
# should point to the API container (`http://localhost:8000`).  In
# production, set it to the public URL of your API service.
NEXT_PUBLIC_API_BASE=https://crypto-signals-api.fly.dev

# Alternative API URL variable (for compatibility)
NEXT_PUBLIC_API_BASE_URL=https://crypto-signals-api.fly.dev
API_BASE_URL=https://crypto-signals-api.fly.dev

# Feature Flags
# Enable investor mode dashboard with real-time SSE streams
NEXT_PUBLIC_INVESTOR_MODE=true

# Site Configuration
NEXT_PUBLIC_SITE_NAME=aipredictedsignals.cloud
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Discord role IDs (public for display only, no secrets)
NEXT_PUBLIC_ROLE_FREE=
NEXT_PUBLIC_ROLE_STARTER=
NEXT_PUBLIC_ROLE_PRO=
NEXT_PUBLIC_ROLE_TEAM=
NEXT_PUBLIC_ROLE_FOUNDER=